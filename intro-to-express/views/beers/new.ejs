<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link >
    <title>LHL Express Demo - New Beer</title>
  </head>

  <body>

    <div class="container">
      <h1>New Beer</h1>

      <% if (errorMessage) { %>
        <div class="alert alert-danger">
          <%= errorMessage %>
        </div>
      <% } %>

      <form action="/beers" method="POST">
        <div class="form-group">
          <label for="beer-name">Beer Name</label>
          <input type="text" id="beer-name" name="name" class="form-control">
        </div>

        <div class="form-group">
          <label for="beer-brewery">Brewery Name</label>
          <input type="text" id="beer-brewery" name="brewery" class="form-control">
        </div>

        <div class="form-group">
          <label for="beer-style">Beer Style</label>
          <select id="beer-style" name="style" class="form-control">
            <%  styles.forEach( style => { %>
              <option value="<%= style %>"><%= style %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label for="abv">ABV</label>
          <input type="number" id="abv" name="abv" class="form-control">
        </div>

        <div class="form-group">
          <label for="logo">Logo URL</label>
          <input type="url" id="logo" name="logo" class="form-control">
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary">Add Beer</button>
        </div>
      </form>

    </div>

  </body>
</html>
